<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdvancedLevel">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advanced Level Will be available soon"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bkg">
        <ImageView
            android:id="@+id/iv1_ad"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/black"/>
        <EditText
            android:id="@+id/et1_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Enter Car make name"
            android:background="@drawable/bkg"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bkg">
        <ImageView
            android:id="@+id/iv2_ad"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/black"/>
        <EditText
            android:id="@+id/et2_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Car make name"
            android:background="@drawable/bkg"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bkg">
        <ImageView
            android:id="@+id/iv3_ad"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/black"/>
        <EditText
            android:id="@+id/et3_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Car make name"
            android:background="@drawable/bkg"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        tools:context=".Identify_the_car">
        <Button
            android:layout_margin="5dp"
            android:id="@+id/b1_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:text="Submit"
            />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>